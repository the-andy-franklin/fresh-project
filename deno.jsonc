{
  "lock": false,
  "tasks": {
    "start": "deno run -A --unstable --watch=static/,routes/ dev.ts"
  },
  "importMap": "./import_map.jsonc",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-unused-vars",
        "no-explicit-any"
      ]
    }
  },
  "fmt": {
    "lineWidth": 100
  }
}
